{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format.
    // Use the Deploy Dependencies tasks to install the necessary packages.
    // Needs Powershell>=5.1 on Windows.
    // Remember to include any global Python bin (Scripts on Windows) in PATH.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Deploy Dependencies",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--group",
                "deploy"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfvd",
                "build",
                "dist",
                "htmlcov",
                "docs/_build",
                "src/${config:modulename}.egg-info"
            ],
            "windows": {
                "command": "rm",
                "args": [
                    "-R",
                    "-Path",
                    "'src/${config:modulename}.egg-info','build','dist','htmlcov','docs/_build'",
                    "-ErrorAction",
                    "SilentlyContinue"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Sort Imports",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "isort",
                "src",
                "--jobs",
                "-1"
            ],
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Security",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "bandit",
                "-c",
                "pyproject.toml",
                "-r",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "build",
                ".",
                "--wheel",
                "--sdist"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "coverage",
                "run",
                "-m",
                "unittest"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Coverage Report",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "coverage",
                "html"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx",
            "type": "process",
            "command": "sphinx-apidoc",
            "args": [
                "--ext-autodoc",
                "--ext-viewcode",
                "--templatedir=docs",
                "-f",
                "-o",
                "docs",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx HTML",
            "type": "process",
            "command": "/usr/bin/make",
            "windows": {
                "command": "${workspaceFolder}/docs/make.bat"
            },
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Locally",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--user",
                "--force-reinstall",
                "*.whl"
            ],
            "windows": {
                "command": "${config:python.defaultInterpreterPath}",
                "args": [
                    "-m",
                    "pip",
                    "install",
                    "--user",
                    "--force-reinstall",
                    "--find-links=${workspaceFolder}/dist",
                    "${workspaceFolderBasename}"
                ]
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                //"Install Dependencies",
                "Security",
                "Sort Imports",
                "Format",
                "Pylint",
                "Test",
                "Coverage Report",
                "Build",
                "Sphinx HTML"
            ],
            "options": {
                "cwd": "dist"
            },
            "problemMatcher": []
        }
    ]
}